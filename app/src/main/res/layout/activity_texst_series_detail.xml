<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="25dp"
    tools:context=".TestSeriesDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <!-- Test Image -->
            <ImageView
                android:id="@+id/details_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Test Image"
                android:layout_marginBottom="16dp"
                android:background="#EEEEEE" />

            <!-- Subject -->
            <TextView
                android:id="@+id/details_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject: Physics"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Title -->
            <TextView
                android:id="@+id/details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title: Motion Test"
                android:textSize="18sp"
                android:textColor="#444444"
                android:layout_marginBottom="8dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: This is a test on motion chapter"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <!-- Duration -->
            <TextView
                android:id="@+id/details_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 45 minutes"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp" />

            <!-- Optional Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Question Options using RadioButtons -->
                <RadioGroup
                    android:id="@+id/question_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/option_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option A"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/option_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option B"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/option_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Option C"
                        android:textSize="16sp" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>


</ScrollView>