<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".AnswerDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/answerDetails_ImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="#EEEEEE"
            android:contentDescription="Test Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />


        <TextView
            android:id="@+id/answerSubjectDetail_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Subject: Physics"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Title -->
        <TextView
            android:id="@+id/answerTitleDetail_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Title: Motion Test"
            android:textColor="#444444"
            android:textSize="18sp" />

        <!-- Description -->
        <TextView
            android:id="@+id/answerDescriptionDetail_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Description: This is a test on motion chapter"
            android:textColor="#555555"
            android:textSize="16sp" />

        <!-- Duration -->
        <TextView
            android:id="@+id/answerDurationDetail_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Duration: 45 minutes"
            android:textColor="#555555"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/answersTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answers will be shown here"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingTop="16dp"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>