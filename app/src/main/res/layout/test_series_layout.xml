<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/test_image"
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/test_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Test Subject"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/test_tittle"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:text="Test Tittle"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/test_description"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:text="Test Description"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/test_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Test Duration"
                        android:textSize="16dp" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/test_edit"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:background="@color/gray"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Edit"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/testExit_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="60dp"
                    android:background="@color/gray"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:text="Exit"
                    android:textSize="15dp" />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>