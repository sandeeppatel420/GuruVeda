<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DownloadActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/downloadVideosTopAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/healthTextColor"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:navigationIcon="@drawable/arrow"
        android:layout_below="@id/main"
        app:title="Download Videos"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        tools:ignore="MissingConstraints,NotSibling" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/downloadedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/downloadVideosTopAppBar"
        android:layout_gravity="center" />

</RelativeLayout>